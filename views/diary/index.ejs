<% layout('layouts/boilerplate') -%>
    <p>こんにちは<%= user.username %>さん</p>
    <h1>Yeah!英絵日記</h1>
    <a href="/diary/<%= user._id %>/new">出来事を記録する</a>
    <% diaries.forEach(diary=> { %>
        <p class="my-2 fs-3">
            <%= diary.date %>
        </p>
        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4 ">
                    <div class="p-2">
                        <p class="fs-5">
                            <%= diary.content %>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-2">
                        <p class="fs-5">
                            <%= diary.translate%>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img class="image-fluid rounded-3" style="height: 200px; width: auto;"
                        src="<%= diary.image.cloudinaryURL %>">
                </div>
            </div>
        </div>
        <% }) %>